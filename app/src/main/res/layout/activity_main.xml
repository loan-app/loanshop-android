    <!--android:id="@+id/activity_main_fl"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"/>-->

    <com.ailiangbao.alb.ui.base.view.NotScrollViewPager
        android:id="@+id/activity_main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_main_bottom_bar_line"/>
</RelativeLayout>